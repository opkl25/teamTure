<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="team.ture.mapper.locationMapper">
  
  	<select id="listTreply" resultType="treplyVO">
  		
  		SELECT tridx
  			, trwriter
  			, trcontent
  			, trwdate
  			, lidx
  			, tidx
  			
  			
  		FROM TSPOTREPLY
  	  	  	
  	
  	
  	</select>
  	
  	<resultMap type="HashMap" id="getUserCount">
  	
  	</resultMap>
  	
  	<select id="getUserCount" resultType="HashMap">
  	
  		SELECT tridx
  			, trwriter
  			, trcontent
  			, trwdate
  			, lidx
  			, tidx
  			
  			
  		FROM TSPOTREPLY
  		
  	</select>
  	
  	<insert id="insertTreply" parameterType="treplyVO" >
  	
  		<![CDATA[
		INSERT INTO 
					tspotreply(
					
					trcontent
					, trwriter
					, trwdate
					, lidx
					, tidx
					, midx
					)
					
			VALUES(
					 
					 #{trcontent}
					 , '테스터'
					 , now()
					 , #{lidx}
					 , #{tidx}
					 , 1
					 )
		]]>	 
				
					
		
	<selectKey resultType="integer" keyProperty="tridx" order="AFTER"><!--order = AFTER BEFORE-->
		SELECT MAX(tridx) FROM TSPOTREPLY
  	</selectKey>
  	
  	
  	</insert>
  
  
  
  </mapper>